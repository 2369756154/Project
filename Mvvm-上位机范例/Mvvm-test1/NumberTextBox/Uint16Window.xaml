<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mvvm_test1.NumberTextBox"
        xmlns:Mvvm_test1="clr-namespace:Mvvm_test1" x:Class="Mvvm_test1.NumberTextBox.Uint16Window"
        mc:Ignorable="d"
        Title="16位正整数输入框" Height="125" Width="200" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>
        <Mvvm_test1:NumTextBox x:Name="numTextBox" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="30" BorderThickness="2" BorderBrush="Black" InputType="Uint16" />
        <Button x:Name="button" Content="确认" HorizontalAlignment="Right" Margin="0,10,10,10" Grid.Row="1" Width="68" Click="button_Click" />
    </Grid>
</Window>
